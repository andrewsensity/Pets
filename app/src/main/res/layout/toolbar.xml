<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarMain"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/design_default_color_primary"
    android:elevation="@dimen/toolbarElevation"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    <!--android:theme="@style/ThemeOverlay.AppCompat.ActionBar"-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFootprint"
            android:layout_width="0dp"
            android:layout_height="@dimen/heightFootprint"
            android:layout_gravity="center_vertical"
            android:src="@drawable/footprint"
            android:layout_weight=".5"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="Wild Pets"
            android:textSize="40dp"
            android:fontFamily="cursive"
            android:layout_weight="2.2"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFavoritesPets"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.3"
            android:src="@drawable/star_numer_5"
            android:layout_gravity="center_vertical"
            android:onClick="FavoritesPets"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.Toolbar>