<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/heightCardView"
    android:layout_margin="20dp"
    android:elevation="@dimen/cardviewElevation"
    app:cardCornerRadius="@dimen/cornerCardView">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPetFavorite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightImageCardView"
            android:src="@drawable/horse"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="1"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNameFavorite"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Arya"
                android:textSize="@dimen/textSizeCardView"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:gravity="right"
                android:paddingEnd="20dp"
                android:layout_gravity="center_vertical"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRatingFavorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:text="@string/pLikes"
                android:textSize="@dimen/textSizeCardView"
                android:gravity="right"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="@dimen/dimenIconBones"
                android:src="@drawable/bone_orange"
                android:layout_gravity="left"
                android:layout_marginStart="5dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>