<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:com.mikaellopez="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfilePetFragment">

    <include android:id="@+id/toolbarMain"
        layout="@layout/toolbar"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivCircle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/horse"
        app:civ_border_color="@color/design_default_color_primary_dark"
        app:civ_border_width="8dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10dp"
        app:civ_shadow_color="#3f51b5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arya Stark"
        android:gravity="center_horizontal"
        android:textSize="@dimen/textSizePet"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_marginTop="350dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPetProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"/>

</FrameLayout>